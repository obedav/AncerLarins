# ── Application ──────────────────────────────────────────
APP_NAME=AncerLarins
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Lagos
APP_URL=https://ancerlarins.com
APP_PORT=80
APP_SSL_PORT=443

# ── Database (PostgreSQL + PostGIS) ──────────────────────
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=ancerlarins
DB_USERNAME=ancerlarins
DB_PASSWORD=CHANGE_ME_strong_password_here

# ── Redis ────────────────────────────────────────────────
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ── Cache & Queue ────────────────────────────────────────
CACHE_STORE=redis
CACHE_PREFIX=ancerlarins_
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# ── Cloudinary (Image uploads) ───────────────────────────
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_UPLOAD_PRESET=ancerlarins_properties

# ── Termii SMS/OTP ──────────────────────────────────────
TERMII_API_KEY=
TERMII_BASE_URL=https://api.ng.termii.com/api
TERMII_SENDER_ID=AncerLarins

# ── Paystack (Payments) ─────────────────────────────────
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_PAYMENT_URL=https://api.paystack.co

# ── Firebase Cloud Messaging ────────────────────────────
FCM_SERVER_KEY=
FCM_PROJECT_ID=ancerlarins

# ── Sentry (Error Tracking) ─────────────────────────────
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2

# ── Frontend ─────────────────────────────────────────────
FRONTEND_URL=https://ancerlarins.com
NEXT_PUBLIC_API_URL=https://ancerlarins.com/api/v1
NEXT_PUBLIC_APP_NAME=AncerLarins
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=

# ── Mail ─────────────────────────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ancerlarins.com
MAIL_FROM_NAME=AncerLarins

# ── Logging ──────────────────────────────────────────────
LOG_CHANNEL=stack
LOG_STACK=single,sentry_logs
LOG_LEVEL=warning

# ── Security ────────────────────────────────────────────
BCRYPT_ROUNDS=12
